@model asp_mvc_crud.Models.Borrowing

@{
    ViewData["Title"] = "New Borrowing";
}

<h1>New Borrowing</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="MemberId" class="form-label">Member</label>
                <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BookId" class="form-label">Book</label>
                <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId">
                    <option value="">-- Select Book --</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DueDate" class="form-label"></label>
                <input asp-for="DueDate" class="form-control" type="date" value="@DateTime.Now.AddDays(14).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
                <small class="form-text text-muted">Default: 14 days from today</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Borrow Book" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}