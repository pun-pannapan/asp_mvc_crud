@model IEnumerable<asp_mvc_crud.Models.Member>

@{
    ViewData["Title"] = "Members";
}

<h1>Members</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Member</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th>@Html.DisplayNameFor(model => model.JoinDate)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.JoinDate)</td>
                    <td>
                        <span class="badge bg-@(item.Status == "Active" ? "success" : item.Status == "Inactive" ? "secondary" : "danger")">
                            @Html.DisplayFor(modelItem => item.Status)
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-info">Details</a>
                        @* <a asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-danger">Delete</a> *@
                        <form asp-action="Delete"
                              asp-route-id="@item.MemberId"
                              method="post"
                              asp-antiforgery="true"
                              class="d-inline"
                              onsubmit="return confirm('คุณแน่ใจหรือไม่ว่าต้องการลบสมาชิกนี้?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>